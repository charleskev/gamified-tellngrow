<!-- Navigation Bar with Animations -->
<style>
    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-8px);
        }
    }
    
    @keyframes glow {
        0%, 100% {
            text-shadow: 0 0 5px rgba(16, 185, 129, 0);
        }
        50% {
            text-shadow: 0 0 15px rgba(16, 185, 129, 0.6);
        }
    }
    
    @keyframes pulse-gentle {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.8;
        }
    }
    
    .nav-logo {
        animation: slideDown 0.6s ease-out, float 3s ease-in-out infinite;
    }
    
    .nav-link {
        position: relative;
        animation: slideDown 0.6s ease-out backwards;
        transition: all 0.3s ease;
    }
    
    .nav-link:hover {
        color: #10b981;
        transform: translateY(-2px);
    }
    
    .nav-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -5px;
        left: 0;
        background: linear-gradient(90deg, #10b981, #06b6d4);
        transition: width 0.3s ease;
    }
    
    .nav-link:hover::after {
        width: 100%;
    }
    
    .nav-cta {
        animation: slideDown 0.6s ease-out backwards;
        transition: all 0.3s ease;
    }
    
    .nav-cta:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
    }
    
    .nav-container {
        animation: slideDown 0.6s ease-out;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>

<nav class="relative bg-gradient-to-r from-teal-500 via-emerald-500 to-green-500 text-white shadow-xl nav-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
